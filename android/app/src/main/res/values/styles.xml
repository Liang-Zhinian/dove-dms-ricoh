<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>



    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
    </style>

    <!-- 宛先一覧のタグボタン -->
    <style name="address_tag_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16px</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 宛先選択ダイアログ -->
    <style name="no_line_dialog"  parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- スキャン設定ダイアログ -->
    <style name="no_title_dialog"  parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
