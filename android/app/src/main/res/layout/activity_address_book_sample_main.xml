<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context=".sample.app.addressbook.AddressBookSampleMainActivity" >

    <LinearLayout
        android:layout_width="800px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/Indent_1" >


        <TextView
            android:id="@+id/login_status_txt"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:text="Loin status: "
            android:textSize="20px" />
        <TextView
            android:id="@+id/auth_state_txt"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:text="Auth state: "
            android:textSize="20px" />
        <TextView
            android:id="@+id/entry_info_txt"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:text="Entry info: "
            android:textSize="20px" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/user_list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
        
</LinearLayout>
