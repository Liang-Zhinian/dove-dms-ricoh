{
	"name": "dove",
	"version": "1.0.4",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git://github.com/Liang-Zhinian/dmsapp.git"
	},
	"scripts": {
		"eslint": "eslint .",
		"flow": "flow",
		"format": "prettier-standard 'app/**/*.js'",
		"lint-staged": "lint-staged",
		"log": "adb logcat *:S ReactNative:V ReactNativeJS:V",
		"precommit": "lint-staged && yarn test",
		"prepush": "yarn test",
		"release-android": "cd android && ./gradlew assembleRelease && cd ..",
		"install-android": "adb install android/app/build/outputs/apk/app-release.apk",
		"uninstall-app": "adb uninstall com.dove",
		"release-ios": "react-native bundle --entry-file index.ios.js --platform ios --dev false --bundle-output ./ios/bundle/main.jsbundle --assets-dest ./ios/bundle",
		"reverse": "adb reverse tcp:8081 tcp:8081",
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "flow && standard && jest",
		"test-android": "cd android && gradlew installRelease",
		"update-android": "code-push release-react dmsapp android",
		"update-android-production": "code-push promote dmsapp Staging Production"
	},
	"lint-staged": {
		"linters": {
			"app/**/*.js": [
				"prettier-standard",
				"git add"
			]
		}
	},
	"dependencies": {
		"crypto-js": "^3.1.9-1",
		"moment": "^2.19.1",
		"prop-types": "^15.5.8",
		"react": "16.0.0",
		"react-native": "0.50.3",
		"react-native-code-push": "^5.2.1",
		"react-native-doc-viewer": "^2.6.3",
		"react-native-fetch-blob": "^0.10.8",
		"react-native-fs": "^2.8.1",
		"react-native-image-picker": "^0.26.7",
		"react-native-linear-gradient": "^2.3.0",
		"react-native-parallax-scroll-view": "^0.20.1",
		"react-native-pdf": "^2.0.1",
		"react-native-push-notification": "^3.0.1",
		"react-native-svg": "^6.0.1-rc.1",
		"react-native-vector-icons": "^4.4.2",
		"react-navigation": "^1.0.0-beta.19",
		"react-redux": "^5.0.6",
		"redux": "^3.7.2",
		"redux-actions": "^2.2.1",
		"redux-logger": "^3.0.6",
		"redux-persist": "^4.8.2",
		"redux-thunk": "^2.2.0",
		"victory-native": "^0.16.1"
	},
	"devDependencies": {
		"babel-eslint": "^6.1.2",
		"babel-jest": "17.0.0",
		"babel-preset-react-native": "1.9.0",
		"chai": "^3.5.0",
		"eslint": "^3.5.0",
		"eslint-config-airbnb": "^11.1.0",
		"eslint-plugin-flowtype": "^2.41.0",
		"eslint-plugin-import": "^1.14.0",
		"eslint-plugin-jsx-a11y": "^2.2.1",
		"eslint-plugin-react": "^6.2.0",
		"eslint-plugin-react-native": "^2.0.0",
		"flow-bin": "0.42.0",
		"jest": "17.0.0",
		"jest-react-native": "17.0.0",
		"lint-staged": "6.0.0",
		"mocha": "^2.5.3",
		"prettier-standard": "^8.0.0",
		"react-test-renderer": "15.3.2",
		"redux-immutable-state-invariant": "^2.1.0",
		"standard": "^10.0.3"
	},
	"jest": {
		"preset": "react-native",
		"setupFiles": [
			"<rootDir>/jest-setup.js"
		],
		"transformIgnorePatterns": [
			"node_modules/(?!react-native|react-navigation)/"
		]
	},
	"standard": {
		"plugins": [
			"flowtype"
		],
		"parser": "babel-eslint",
		"globals": [
			"describe",
			"it",
			"expect",
			"beforeEach",
			"afterEach",
			"jest",
			"jasmine",
			"fetch"
		],
		"ignore": [
			"/js/__generated__/"
		]
	}
}